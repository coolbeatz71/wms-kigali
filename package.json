{
  "name": "wms-kigali",
  "version": "1.0.0",
  "description": "Waste management system REST API built with Node and ExpressJS. Use Sequelize as ORM.",
  "main": "index.js",
  "repository": "https://github.com/coolbeatz71/wms-kigali.git",
  "author": "mutombo jean-vincent <jean-vincent.mutombo@andela.com>",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint ./server/**/*.js",
    "lint-fix": "npx eslint --fix ./server/**/*.js",
    "db-migrate": "npx sequelize db:migrate",
    "start": "babel-watch app.js",
    "start:heroku": "npm run db-migrate && babel-node app.js",
    "seed": "NODE_ENV=test npx sequelize db:seed:all",
    "test": "npm run test-migrate && npm run seed && NODE_ENV=test nyc --report=text npx mocha server/test/ --require @babel/register",
    "build": "babel app.js --out-dir build",
    "dev": "NODE_ENV=development nodemon  --require @babel/register app.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dbInit-dev": "NODE_ENV=development sequelize db:create || NODE_ENV=development sequelize db:migrate",
    "dbInit-test": "NODE_ENV=test npx sequelize db:create || NODE_ENV=test npx sequelize db:migrate",
    "dbInit": "npm run dbInit-dev || npm run dbInit-test",
    "test-migrate": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./server/**/*.js": [
      "eslint",
      "pretty-quick --staged",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@sindresorhus/slugify": "^0.9.1",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "coveralls": "^3.0.3",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.16.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mongoose": "^5.2.2",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.0",
    "nock": "^10.0.6",
    "nyc": "^13.3.0",
    "open": "^6.2.0",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-plus-token": "^2.1.0",
    "passport-jwt": "^4.0.0",
    "passport-linkedin": "^1.0.0",
    "passport-linkedin-oauth2": "^1.6.1",
    "passport-linkedin-token": "^0.1.1",
    "passport-twitter": "^1.0.4",
    "path": "^0.12.7",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^5.3.5",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "slug": "^0.9.1",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.2",
    "underscore": "^1.9.1",
    "unirest": "^0.6.0"
  },
  "devDependencies": {
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "pretty-quick": "^1.11.0"
  }
}